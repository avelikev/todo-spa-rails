$('.sidebar').html(
	'<%= escape_javascript( render( partial: 'sidebar', locals:{ all_lists: @lists } ) ) %>'
);

<% if @selected_list != nil %>
	addSelectedClassToList( <%= @selected_list.id %> );
<% end %>

<% if @refreshMainSection == true %>
	$('.todoList').html(
		'<%= escape_javascript( render( partial: 'helpful_message', locals:{ all_lists: @lists } ) ) %>'
	);

	$('.completedList').html('');
<% end %>
