<ul>
	<h3>
		Your To-Do Lists:
	</h3>

	<% all_lists.each do |list| %>
		<li>
			<span class="sidebarItem" data-list-id="<%= list.id %>">
				<%= list.name %>
			</span>
			<span class="deleteIcon">
				<img src="/icons/cross-24-48.png">
			</span>
		</li>
	<% end %>

	<div class="newListForm hide">
		<input onkeypress="return checkListSubmit( event )" maxlength="63" placeholder="List Name">
		</input>
		<div class="buttonSection">
			<button class="saveButton"> Save </button>
			<button class="cancelButton"> Cancel </button>
		</div>
	</div>

	<div class="addNewList">
		<img src="/icons/plus-24-16.png">
		Add New List
	</div>
</ul>
